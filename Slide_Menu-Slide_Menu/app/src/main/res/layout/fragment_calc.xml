<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_horizontal">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/txtView"
        android:layout_alignTop="@+id/txtNota2"
        android:layout_alignLeft="@+id/lblMedia"
        android:layout_alignStart="@+id/lblMedia" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtNota1"
        android:hint="Nota 1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtNota2"
        android:hint="Nota 2"
        android:layout_below="@+id/txtNota1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtNota3"
        android:hint="Nota 3"
        android:layout_below="@+id/txtNota2"
        android:layout_alignLeft="@+id/txtNota2"
        android:layout_alignStart="@+id/txtNota2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtNota4"
        android:hint="Nota 4"
        android:layout_below="@+id/txtNota3"
        android:layout_alignLeft="@+id/txtNota3"
        android:layout_alignStart="@+id/txtNota3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calcular"
        android:id="@+id/btnCalcular"
        android:layout_below="@+id/txtNota2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="MÃ©dia: "
        android:id="@+id/lblMedia"
        android:layout_alignBottom="@+id/txtNota1"
        android:layout_alignRight="@+id/btnCalcular"
        android:layout_alignEnd="@+id/btnCalcular" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fragment"
        android:id="@+id/btnFragment"
        android:layout_below="@+id/lblMedia"
        android:layout_centerHorizontal="true" />

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>